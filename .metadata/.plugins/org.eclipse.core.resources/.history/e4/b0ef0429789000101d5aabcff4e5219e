 *   This header only exposes the demo entry point implemented in
 *   lis3dsh_spi_polling_demo.c. All hardware setup and filtering
 *   helpers remain private to the .c file.
 */

#ifndef LIS3DSH_SPI_POLLING_DEMO_H
#define LIS3DSH_SPI_POLLING_DEMO_H



/**
 * @brief  Run the LIS3DSH SPI polling demo.
 * @return Never returns on success (loops forever). Returns non-zero on init error.
 */
int lis3dsh_spi_polling_demo_main(void);



#endif /* LIS3DSH_SPI_POLLING_DEMO_H */
